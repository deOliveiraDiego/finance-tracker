<h2>User details.</h2>
<div class="card card-header d-inline-block mb-3">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Email:</strong> <%= @user.email %></td>
        <td><strong>Name:</strong> <%= @user.full_name %></td>
        <td><strong>Actions:</strong>
          <% if current_user.is_friend(@user.id) %>
            <span class="badge badge-secondary">You are friends.</span>
          <% else %>
            <%= link_to "Follow friend", friendships_path(friend: @user),
                        class: "btn btn-sm btn-success", method: :post %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<% if @tracked_stocks.any? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks.</p>
<% end %>